@{
    ViewBag.Title = "Scss Demo";
}
@using System.Activities.Statements
@model ScssDemoPortal.Models.ViewModel

@section Style{
    <link rel="stylesheet" href="@(Url.Content("~/public/style/main.css"))">
}

@section Scripts{
    <script src="@(Url.Content("~/public/control/jquery.min.js"))"></script>
    <script src="@(Url.Content("~/public/control/ace/ace.js"))"></script>
    <script src="@(Url.Content("~/public/control/velocity.min.js"))"></script>
    <script src="@(Url.Content("~/public/control/main.js"))"></script>
    @*<script src="@(Url.Content("~/public/control/app.js"))"></script>*@
}

<input type="hidden" id="rootPath" value="@(Url.Content("~/"))" />
<input type="hidden" id="snippetId" value="@(Model.Id)" />
<input type="hidden" id="isSolution" value="@(Model.IsSolution.ToString().ToLower())" />

<button id="open-menu-button" class="open-menu-button" title="Index"> </button>


<div class="menu">
    <div class="menu-index" id="menu-index">
        <ol class="menu-index-list">
        </ol>
    </div>
</div>

<div class="main">
    
    <header>
        <div class="logo">
            <img src="@(Url.Content("~/public/style/images/sass.png"))" alt="Sass" />
        </div>
        <div class="pageTitle">
            <h1>Exhibition Portal</h1>
        </div>
        <nav>
            <fieldset class="navButtons">
                <a href="@(Url.Content("~/") + Model.Prev)" class="navButton navButtonHide" id="navButtonPrev">&#171; Back</a>
                @if (Model.IsSolution)
                {
                    <a href="@(Url.Content("~/") + Model.Id)" class="navButton navButtonSm" id="navButtonOrig" title="Show original">?&#171;</a>
                }
                else
                {
                    <a href="@(Url.Content("~/Solution/") + Model.Id)" class="navButton navButtonSm" id="navButtonAnser" title="Show sassy css">&#187;!</a>
                }
                    
                
                <a href="@(Url.Content("~/") + Model.Next)" class="navButton navButtonHide" id="navButtonNext">Next &#187;</a>
            </fieldset>
        </nav>
    </header>
    <div class="animateWrapperWrapper">
        <div class="animateWrapper" id="animateWrapper">
            <section class="description">
                <h2 id="descriptionTitle">Oh no, a pun!</h2>
                <div>
                    <span id="htmlButton"><button id="openSlide" class="openSlide"><img src="@(Url.Content("~/public/style/images/screen.png"))" alt="slide" /></button></span>
                    <span id="descriptionText" class="description-text">
                        An elderly woman at an ATM asked me to help her check her balance &hellip; so I pushed her.
                    </span>
                </div>
            </section>
            <section class="editors">
                <div class="editorWrap">
                    <div class="editorTitle">Raw Scss</div>
                    <div class="editor" id="editorScss"> </div>
                </div>
                <div class="editorWrap">
                    <div class="editorTitle">Compiled CSS<span class="error-text"> - Compile Error: see below</span></div>
                    <div class="editor" id="displayCss"> </div>
                </div>
            </section>
            <section class="errorMessages">
                <div class="errorMessage">&nbsp;</div>
            </section>
        </div>

    </div>
</div>


<div id="popup">
    <div class="popup-header">
        <h3 id="popup-title" class="popup-title">&nbsp;</h3>
        <button class="popup-close-button">&times;</button>
    </div>
    <div class="popup-content-body">
        <div class="popup-content" id="popup-content">
            <p>Loading ... </p>
        </div>
    </div>
</div>
<div id="overlay"> </div>
